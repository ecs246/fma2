<h1>New category</h1>

<div class="category wrap">
  <div class="left">
    <%= render 'form' %>
    <%= link_to 'Back', admin_categories_path %>

  </div>
  <div class="right">
    <table id="map">
      <tr>
        <th>
          Name
        </th>
        <th>
          Description
        </th>
        <th>
           Id
        </th>
        
      </tr>
   <%=process_category(Category.find(2)) do |category,level| %>
      <%= render :partial => "item", :locals => { :level => level, :category=>category } %>
  <%end%>  
    </table>
    <form id="hidden">
      <table>
      <tr>
        <td colspan="3">
          <label for="category_name">Name</label><input type="text" name="category_name">
          <label for="category_short_description">Short Description</label><input type="text" name="category_short_description">
          <input type="button" value="Cancel"> <input type="submit" value="submit">
        </td> 
      </tr>
      </table>
    </form>  

  </div>
</div>

